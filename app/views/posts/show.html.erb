<div class="container">
  <article>

  <h1><%= @post.title %></h1>

  <div class="row">
    <div class="group1 col-sm-9 col-md-9">
      <span class="glyphicon glyphicon-user "></span>
      <%= @post.user.first_name %> <%= @post.user.last_name %>
    </div>
      <span class="glyphicon glyphicon-time"></span>
      <%= l @post.created_at, format: :long %>
  </div>
  <hr>
  <img class="large_image" class="img-responsive">
  <%= image_tag @post.image.url(:large) if @post.image? %>
  <br><br>
  <p class="lead"><%= @post.body %></p>
  <div class="group1 col-sm-9 col-md-9">
    <span class="text-left"></span>
    <a href="singlepost.html" class="text-left">

        <% if @post.user.id == current_user.id %>
            <%= link_to t('edit'), edit_post_path(@post), class: 'btn btn-info' %>
            <%= link_to t('delete'), post_path(@post), class: 'btn btn-info ',
                        method: :delete, data: { confirm: t('Are you sure?') } %>
        <% end %>
    </a>
  </div>
  <div class="group2 col-sm-3  col-md-3">
    <span class="text-right"></span>
    <a href="singlepost.html" class="text-right" >
      <%= link_to t('home'), posts_path, class: 'btn btn-info' %>
    </a>
  </div>
  <br><br><br>

<%= render 'comments/form' %>
<%= t('Number of comments') %><%= @post.comments.count %>
<%= nested_comments @comments.arrange{ order(created_at: :desc) } %>
  </article>
</div>





