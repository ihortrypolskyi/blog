<div class="container" id="post_show">

  <%= render 'posts/show', post: @post %>

  <div class="group1 col-sm-9 col-md-9">
    <span class="text-left"></span>
    <% if @post.user.id == current_user.id %>
        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myupdatepost_<%= @post.id %>">
          <%= t('edit') %>
        </button>
        <%= link_to t('delete'), post_path(@post), class: 'btn btn-info',
                    method: :delete, data: { confirm: t('Are you sure?') } %>

        <div class="modal fade" id="myupdatepost_<%= @post.id %>" tabindex="-1"
             role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"><%= t('edit_post') %></h4>
              </div>
              <div class="modal-body">
                <%= render 'form', post: @post %>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>

  <div class="group2 col-sm-3  col-md-3">
    <span class="text-right"></span>
    <a href="singlepost.html" class="text-right" >
      <%= link_to t('Back to posts'), :back , class: 'btn btn-info' %>
      <%= link_to t('All posts'), '/', class: 'btn btn-info' %>
    </a>
  </div>

  <p class="comment_form"><%= render 'comments/form' %></p>

  <div id="post-comments_<%= @post.id %>">
    <%= render 'posts/comments_list' %>
  </div>
</div>
