<article id="post_<%= post.id %>">
  <hr>
  <h2><%= link_to (post.title), post %></h2>
  <div class="row">
    <div class="group1 col-sm-8 col-md-8">
      <img class="large_image" class="img-responsive">
      <%= image_tag post.image.url(:thumb) if post.image? %>
    </div>
    <div class="group2 col-sm-4 col-md-4">
      <span class="glyphicon glyphicon-time"></span>
      <%= l post.created_at, format: :long %><br>
      <span class="glyphicon glyphicon-user"></span>
      <%= post.user.first_name %> <%= post.user.last_name %><br>
      <span class="glyphicon"></span>
        <% if post.comments.count >= 1 %>
            <%= image_tag('comments.jpg', size: '20') %>
            <%= post.comments.count %>
        <% else %>
            <%= image_tag('comments.jpg', size: '20') %>
            <%= post.comments.count %>
        <% end %><br><br>
      <span class="text-left"></span>

        <% if post.user.id == current_user.id %>
            <%= link_to t('edit'), edit_post_path(post), class: 'btn btn-info' %>
            <%= link_to t('delete'), post_path(post), class: 'btn btn-info',
                        method: :delete, data: { confirm: t('Are you sure?') } %>
        <% end %>

      <span class="text-right"></span>
      <a>
        <%= link_to t('read this post'), post, class: 'btn btn-info', id: 'continue_reading' %>
      </a>

    </div>
  </div>
  <br>
  <p class="lead"> <%= truncate(post.body, length: 245) %><%= link_to '.....', post %></p>
</article>