<p id="notice"><%= notice %></p>

<div id="heading">
  <h1>Posts list</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td id="table_title"><%= post.title %></td>
        <td id="table_body"><%= post.body %></td>
        <td id="table_user"><%= post.user.first_name %> <%= post.user.last_name %></td>
        <nav><td ><%= link_to 'Show', post %></td>
        <% if post.user.id == current_user.id %> 
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td></nav>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>  
<nav><%= link_to 'New Post', new_post_path %></nav>  

