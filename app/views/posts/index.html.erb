<div class="container">
    <div class="row" >
      <div class="col-md-8 col-sm-8 col-xs-8" id="posts_list"><%= render @posts %>
      </div>
      <div class="col-md-4 col-sm-4 col-xs-4">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4 class="text-center"><%= t('Recommended for reading') %></h4>
          </div>
            <% @side_list.each do |post| %>
              <ul class="list-group">
                <li class="list-group-item"><%= link_to (post.title), post %></li>
              </ul>
              <% end %>
        </div>

      <div class="text-center">
        <button class="btn btn-info btn-lg" data-toggle="modal" data-target="#newPost">
          <%= t('new_post') %>
        </button>
      </div>

        <div class="modal fade" id="newPost" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel"><%= t('new_post') %></h4>
              </div>
              <div class="modal-body">
                <%= render 'form', post: @post %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <div class="text-center"><%= will_paginate @posts %></div>
</div>

