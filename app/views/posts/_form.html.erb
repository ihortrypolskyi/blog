<%= form_for(@post, remote: true) do |f| %>
  <% if @post.errors.any? %>
     <div id="error_explanation">
       <h2><%= pluralize(@post.errors.count, 'error') %></h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
     </div>
  <% end %>

  <div class="field">
    <%= f.label t('title') %>
    <%= f.text_field :title, class:"form-control post_title" %>
  </div>

  <div class="field">
    <%= f.label t('content') %>
    <%= f.text_area :body, class:"form-control post_body" %>
  </div>

    <div class="field">
      <%= f.label t('image') %>
      <%= f.file_field :image, class:"btn btn-info post_image" %>
    </div><br>

  <div class="actions">
    <%= f.submit t('submit'), type: "submit", class:"btn btn-info"  %>
  </div>
<% end %>
