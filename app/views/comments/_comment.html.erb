<p><%= t('Number of comments')%><%= @post.comments.count %></p>
<table>
  <thead>

  </thead>
  <tbody>
  <% @post.comments.each do |comment| %>
      <tr>
        <td id="post_title"><%= comment.user.first_name %><%= comment.user.last_name %></td>
        <!--<td id="post_title"><%= comment.created_at.strftime('%d-%m-%Y %H:%M') %></td>-->
        <td id="post_title"><%= time_ago_in_words(comment.created_at) %><%= t('ago') %></td>
        <td id="post_body"><%= comment.content %></td>
        <% if comment.user_id == current_user.id %>
          <nav>
          <td><%= link_to t('edit'), edit_post_comment_path(comment.post, comment) %></td>
          <td><%= link_to t('delete'), [comment.post, comment],
                            method: :delete, data: { confirm: t('Are you sure?') } %></td>
          </nav>
          <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%=	render 'comments/form' %>
