<p><%= t('Number of comments') %>: <%= @post.comments.count %></p>
<table>
  <thead>

  </thead>
  <tbody>
  <% @post.comments.each do |comment| %>
      <tr>
        <td class="comment_title"><%= comment.user.first_name %><%= comment.user.last_name %></td>
        <!--<td class="comment_title"><%= comment.created_at.strftime('%d-%m-%Y %H:%M') %></td>-->
        <td class="comment_title"><%= time_ago_in_words(comment.created_at) %><%= t('ago') %></td>
        <td class="comment_body"><%= comment.content %>


         <td><%= link_to 'Reply', new_post_comment_path(comment.post, parent_id: comment) %> </td>


        <td class="vote_link"><%= link_to like_post_comment_path(comment.post, comment), method: :put do %>
              <%= image_tag('upvote.png', size: '30') %>
              <%= comment.get_upvotes.size %></td>
          <%	end  %>

          <td class="vote_link"><%= link_to unlike_post_comment_path(comment.post, comment), class: 'vote_link', method: :put do %>
                <%= image_tag('downvote.png', size: '30') %>
                <%= comment.get_downvotes.size %></td>
            <%	end  %>

            <% if comment.user_id == current_user.id && comment == @post.comments.last %>
                <nav>
                  <td><%= link_to t('edit'), edit_post_comment_path(comment.post, comment) %><br>
                    <%= link_to t('delete'), post_comment_path(comment.post, comment),
                                method: :delete, data: { confirm: t('Are you sure?') } %></td>
                </nav>
            <% end %>
            </tr>
  <% end %>
  <hr>
  </tbody>
</table>
<br>
