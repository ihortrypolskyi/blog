<%= form_for([@post, @post.comments.build]) do |f| %>


    <%= f.hidden_field :parent_id, value: parent_id if defined? parent_id %>


    <div class="field">
        <%= f.text_area :content, :placeholder => t('leave your comment here') %>
    </div>
    <div class="actions">
      <%= f.submit t('Add comment') %>
    </div>
<% end %>

