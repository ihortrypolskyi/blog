<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="header">
        <nav>     
          <% if current_user %> 
            <ul class = "top-menu">
              <li><a><%= link_to 'New Post', new_post_path %></a></li>
              <li><a><%= link_to "All posts", '/' %></a></li>
              <li><a><%= link_to "Log out", logout_path, method: "delete" %></li>
              <li><a><%= current_user.first_name %> <%= current_user.last_name %></li>               
            </ul> 
          <% else %> 
            <ul> 
              <li><a><%= link_to "Login", 'login' %></a></li> 
              <li><a><%= link_to "Signup", 'signup' %></a></li> 
            </ul> 
          <% end %>
        </nav>
      </div>
    </div>
      <%= yield %>
  </body>
</html>
